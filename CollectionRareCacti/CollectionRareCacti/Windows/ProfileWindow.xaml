<Window x:Class="CollectionRareCacti.Windows.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollectionRareCacti.Windows"
        mc:Ignorable="d"
        Title="ProfileWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Имя"/>
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Text="Логин"/>
            <TextBlock Text="{Binding Login}"/>
            <TextBlock Text="Пароль"/>
            <TextBlock Text="{Binding Password}"/>
            <Button x:Name="BBack"
            Click="BBack_Click"
            Content="Закрыть"/>
            <Button x:Name="BEdit"
    Click="BEdit_Click"
    Content="Изменить"/>
            <Button x:Name="BRemove"
    Click="BRemove_Click"
    Content="Удалить учетную запись"/>
        </StackPanel>
    </Grid>
</Window>
